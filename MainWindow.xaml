<Window x:Class="English.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:English"
        mc:Ignorable="d"
        Title="Dictionary" Height="652" Width="800" ResizeMode="NoResize" Background="White">
  <Grid HorizontalAlignment="Left" Width="794" Height="623" VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="210"/>
      <ColumnDefinition Width="584"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="623"/>
    </Grid.RowDefinitions>
    <GroupBox Header="Menu" HorizontalAlignment="Left" Height="603" Margin="13,9,0,0" VerticalAlignment="Top" Width="189" FontSize="16" FontWeight="Bold" BorderBrush="Black" Foreground="Black">
      <GroupBox.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
          <GradientStop Color="#FFC36060" Offset="0.401"/>
          <GradientStop Color="#FFE2DEDE" Offset="0.198"/>
        </LinearGradientBrush>
      </GroupBox.Background>
    </GroupBox>
    <Label Content="English:" HorizontalAlignment="Left" Height="37" Margin="23,28,0,0" VerticalAlignment="Top" Width="105" FontSize="18"/>
    <Label Content="Vietnamese:" HorizontalAlignment="Left" Height="37" Margin="23,107,0,0" VerticalAlignment="Top" Width="105" FontSize="18"/>
    <Label Content="Example:" HorizontalAlignment="Left" Height="37" Margin="23,191,0,0" VerticalAlignment="Top" Width="105" FontSize="18"/>
    <TextBox x:Name="txt_Eng" HorizontalAlignment="Left" Height="37" Margin="23,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" FontSize="14"/>
    <TextBox x:Name="txt_Viet" HorizontalAlignment="Left" Height="37" Margin="23,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" FontSize="14"/>
    <TextBox x:Name="txt_Ex" HorizontalAlignment="Left" Height="202" Margin="23,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" FontSize="14"/>
    <Button x:Name="btn_Nhap" Content="Insert" HorizontalAlignment="Left" Height="41" Margin="23,446,0,0" VerticalAlignment="Top" Width="166" FontSize="20" FontWeight="Bold"/>
    <Button x:Name="btn_Sua" Content="Fix" HorizontalAlignment="Left" Height="41" Margin="23,503,0,0" VerticalAlignment="Top" Width="166" FontSize="20" FontWeight="Bold"/>
    <Button x:Name="btn_Xoa" Content="Delete" HorizontalAlignment="Left" Height="41" Margin="23,562,0,0" VerticalAlignment="Top" Width="166" FontSize="20" FontWeight="Bold"/>
    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="623" VerticalAlignment="Top" Width="9" Grid.Column="1" Background="Black"/>
  </Grid>
</Window>

